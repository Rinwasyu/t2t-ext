{
	"manifest_version": 2,
	"name": "t2t-ext",
	"version": "0.0.2",
	"description": "This extension makes sentences more calm.",
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["src/lib/spark-md5.min.js", "src/main.js"],
			"css": ["src/main.css"]
		}
	],
	"background": {
		"scripts": ["src/background.js"]
	},
	"permissions": [
		"tabs",
		"background",
		"storage",
		"unlimitedStorage",
		"contextMenus",
		"http://*/*",
		"https://*/*"
	],
	"browser_action": {
		"name": "click!",
		"default_popup": "src/popup.html"
	},
	"incognito": "split",
	"options_page": "src/options.html"
}